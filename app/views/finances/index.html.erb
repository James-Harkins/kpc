<div class="next-trip-cost">
    <% flash.each do |name, msg| %>
        <div class="alert" role="alert">
            <%= content_tag :div, msg, class: name %>
        </div>
    <% end %>
    <h1>Finances</h1>
    <h3>Total Projected Revenue: $<%= @next_trip.total_projected_revenue %></h3>
    <h3>Total Collected Revenue: $<%= @next_trip.total_collected_revenue %></h3>
    <h3>Total Uncollected Revenue: $<%= @next_trip.total_uncollected_revenue %></h3>
    <hr class="line">
    <h3><u>Paid:</u></h3>
    <% @next_trip.paid_golfer_trips.each do |golfer_trip| %>
        <% golfer = golfer_trip.golfer %>
        <h4><%= golfer.first_name.capitalize.strip %> "<%= golfer.nickname.titleize.strip %>" <%= golfer.last_name.capitalize.strip %>: $<%= golfer_trip.cost %></h4>
        <h4>Nights:</h4>
          <% golfer.trip_night_calendar(@next_trip.id).each do |night| %>
            <h6><%= night.date.strftime('%A') %> </h6>
          <% end %>
        <h4>Rounds:</h4>
          <% golfer.trip_round_calendar(@next_trip.id).each do |round| %>
            <h6><%= round.date.strftime('%A') %> </h6>
          <% end %>
        <hr class="line-thin">
    <% end %>
    <hr class="line">
    <h3><u>Unpaid:</u></h3>
    <% @next_trip.unpaid_golfer_trips.each do |golfer_trip| %>
        <% golfer = golfer_trip.golfer %>
        <h4><%= golfer.first_name.capitalize.strip %> "<%= golfer.nickname.titleize.strip %>" <%= golfer.last_name.capitalize.strip %></h4>
        <h5>Outstanding Balance $<%= golfer_trip.balance %></h5>
        <%= button_to "Mark as Paid", "/update_golfer_payment", :method => :put, :class => 'btn btn-outline-primary', params: {golfer_trip_id: golfer_trip.id, paid: true} %>
        <%= form_with url: "/payments", method: :post, local: true do |form| %>
            <div class="label">
                <%= form.label :amount, 'Add a Payment' %>
            </div>
            <div class="input">
                <%= form.number_field :amount %><br>
            </div>
            <div class="button">
                <%= form.button "Add Payment", name: :golfer_trip_id, value: golfer_trip.id %>
            </div>
        <% end %>
        <h4>Nights:</h4>
          <% golfer.trip_night_calendar(@next_trip.id).each do |night| %>
            <h6><%= night.date.strftime('%A') %> </h6>
          <% end %>
        <h4>Rounds:</h4>
          <% golfer.trip_round_calendar(@next_trip.id).each do |round| %>
            <h6><%= round.date.strftime('%A') %> </h6>
          <% end %>
        <hr class="line-thin">
    <% end %>
    <hr class="line">

    <form action="/dashboard">
        <button id="dashboard_header" type="submit" class="btn btn-outline-primary">DASHBOARD</button>
    </form>
    <form action="/logout">
        <button id="dashboard_header" type="submit" class="btn btn-outline-primary">LOG OUT</button>
    </form>
</div>