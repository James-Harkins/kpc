.btn-outline-primary:focus, .btn-outline-primary:active:focus, .btn.active-outline-primary:focus {
  outline: 0 none !important;
  box-shadow: none !important;
  border: none !important;
}

.btn-outline-danger{
  margin: 1px;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande',
      'Lucida Sans', Arial, sans-serif;;
  font-size: 1.2em;
  color: black !important;
  outline: 0 none !important;
  box-shadow: none !important;
  border-color: black !important;
  background-color: rgb(222, 74, 72);
  font-color: black !important;
}

.btn-outline-danger:hover {
    background-color: rgb(191, 146, 112) !important;
} 

.line {
  border-top: 5px solid black;
}

.line-thin {
  border-top: 1px solid black;
}

.button {
    margin: 1rem 0;
    background-color: #fff;
    padding: 20px;
    cursor: pointer;
    border-radius: 10px;
    font-size: 15px;
}
</style>

<div class='trips'>
    <div class='title'>
        <h1>Welcome back, <%= @golfer.nickname %>, you fuck!</h1>
    </div>
    <br>
    <% if @golfer.admin? %>
      <div class=next-trip-cost>
        <h3>KPC <%= @next_trip.number %></h3>
        <h4>Total Projected Revenue: $<%= @next_trip.total_projected_revenue %></h4>
        <h4>Total Collected Revenue: $<%= @next_trip.total_collected_revenue %></h4>
        <h4>Total Uncollected Revenue: $<%= @next_trip.total_uncollected_revenue %></h4>
        <hr class="line">
        <h3><u>Paid:</u></h3>
          <% @next_trip.paid_golfer_trips.each do |golfer_trip| %>
            <% golfer = golfer_trip.golfer %>
            <h4><%= golfer.first_name %> "<%= golfer.nickname %>" <%= golfer.last_name %>: $<%= golfer_trip.cost %></h4>
            <%= button_to "Mark as Unpaid", "/update_golfer_payment", :method => :put, :class => 'btn btn-outline-primary-paid', params: {golfer_trip_id: golfer_trip.id, paid: false} %>
            <hr class="line-thin">
          <% end %>
        <hr class="line">
        <h3><u>Unpaid:</u></h3>
          <% @next_trip.unpaid_golfer_trips.each do |golfer_trip| %>
            <% golfer = golfer_trip.golfer %>
            <div class=unpaid-golfer>
              <h4><%= golfer.first_name %> "<%= golfer.nickname %>" <%= golfer.last_name %>: $<%= golfer_trip.cost %></h4>
              <%= button_to "Mark as Paid", "/update_golfer_payment", :method => :put, :class => 'btn btn-outline-primary-paid', params: {golfer_trip_id: golfer_trip.id, paid: true} %>
              <hr class="line-thin">
            </div>
          <% end %>
      </div>
    <% else %>
      <div class='next_trip'>
          <% if @golfer.is_registered_for_next_trip(@next_trip) %>
              <div class='next-trip-cost'>
                <h3>See you at KPC <%= @next_trip.number %>!</h3>
                <h4>You owe Joe Copeland $<%= @golfer_next_trip.cost %>!</h4>
              </div>
          <% else %>
              <form action="/register_trip">
                  <button id="dashboard_header" type="submit" class="btn btn-outline-primary">Sign up for KPC <%= @next_trip.number %></button>
              </form>
          <% end %>
      </div>
    <% end %>
    <br>
    <br>
    <form action="/logout">
        <button id="dashboard_header" type="submit" class="btn btn-outline-primary">LOG OUT</button>
    </form>
</div>