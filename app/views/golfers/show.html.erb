.btn-outline-primary-paid{
  margin: 5px;
  background-color: white;
  opacity: 0.7;
  padding: 5px;
  font-size: .5em;
  color: black !important;
  outline: 0 none !important;
  box-shadow: none !important;
  border-color: black !important;
