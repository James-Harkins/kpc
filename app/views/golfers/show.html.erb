<div class='trips'>
    <% flash.each do |name, msg| %>
            <div class="alert" role="alert">
            <%= content_tag :div, msg, class: name %>
            </div>
        <% end %>
    <div class='title'>
        <h1>Welcome back, <%= @golfer.nickname %>, you fuck!</h1>
    </div>
    <br>
    <% if @golfer.admin? %>
      <div class=next-trip-cost>
        <h2>KPC <%= @next_trip.number %></h2>
        <%= button_to "Finances", "/finances", :method => :get, :class => 'btn btn-outline-primary-finances', params: {trip_id: @next_trip.id} %>
        <h3>Attendance:</h3>
        <hr class="line-thin">
        <% @next_trip.sort_by_calendar_admin.each do |date| %>
          <h4><%= date[:date] %></h4>
          <h5>House Attendance: <%= date[:house_attendance] %></h5>
          <% if !date[:round_attendance].nil? %>
            <h5>Round Attendance: <%= date[:round_attendance] %></h5>
          <% end %>
          <hr class="line-thin">
        <% end %>
      </div>
    <% else %>
      <div class='next_trip'>
          <% if @golfer.is_registered_for_next_trip(@next_trip) %>
              <div class='next-trip-cost'>
                <h3>See you at KPC <%= @next_trip.number %>!</h3>
                <% if @golfer_next_trip.balance > 0 %>
                  <h4>You owe Joe Copeland $<%= @golfer_next_trip.balance %>!</h4>
                <% else %>
                  <h4>You're all paid up. Thanks!</h4>
                <% end %>
              </div>
          <% else %>
              <form action="/register_trip">
                  <button id="dashboard_header" type="submit" class="btn btn-outline-primary">Sign up for KPC <%= @next_trip.number %></button>
              </form>
          <% end %>
      </div>
    <% end %>
    <br>
    <br>
    <form action="/logout">
        <button id="dashboard_header" type="submit" class="btn btn-outline-primary">LOG OUT</button>
    </form>
</div>